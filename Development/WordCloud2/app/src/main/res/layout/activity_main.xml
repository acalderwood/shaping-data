<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Billing">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City Name"
        android:id="@+id/CityNameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cuisine Type: "
        android:id="@+id/CuisineTypeLabel"
        android:layout_below="@+id/CityNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="66dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/CityNameText"
        android:layout_above="@+id/CuisineTypeLabel"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/CuisineTypeLabel"
        android:layout_marginLeft="54dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/CuisineTypeText"
        android:layout_alignBottom="@+id/CuisineTypeLabel"
        android:layout_alignRight="@+id/CityNameText"
        android:layout_alignLeft="@+id/CityNameText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:id="@+id/button"
        android:layout_below="@+id/CuisineTypeText"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="114dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:id="@+id/NotificationLabel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
